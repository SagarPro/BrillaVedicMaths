<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sagsaguz.brillavedicmaths.VideoListActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:id="@+id/rlVideoList">

        <ProgressBar
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/pbVideoList"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorDeepRose"
            android:text="Upgrade Now\n( Blossom / Garden / Estate / Orchards )"
            android:textColor="@color/colorWhite"
            android:textAllCaps="false"
            android:id="@+id/btnUpgradeNow"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnUpgradeNow"
            android:layout_marginTop="5dp"
            android:scrollbars="none"
            android:dividerHeight="5dp"
            android:divider="@android:color/transparent"
            android:id="@+id/lvVideosList"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
