<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="5dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/intro_bg"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="30dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:id="@+id/scrollView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@color/colorNavy">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Full Name"
                android:inputType="textPersonName"
                android:layout_marginBottom="10dp"
                android:nextFocusUp="@id/etFullName"
                android:nextFocusLeft="@id/etFullName"
                style="@style/FormEditText"
                android:id="@+id/etFullName"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email Address"
                android:inputType="textEmailAddress"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/etFullName"
                style="@style/FormEditText"
                android:id="@+id/etEmail"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone"
                android:inputType="phone"
                android:maxLength="10"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/etEmail"
                style="@style/FormEditText"
                android:id="@+id/etPhone"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Age"
                android:inputType="number"
                android:maxLength="3"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/etPhone"
                style="@style/FormEditText"
                android:id="@+id/etAge"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="City"
                android:inputType="text"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/etAge"
                style="@style/FormEditText"
                android:id="@+id/etCity"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="text"
                android:layout_marginBottom="20dp"
                android:layout_below="@id/etCity"
                style="@style/FormEditText"
                android:id="@+id/etPassword"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:background="@color/colorPigmentRed"
                style="@style/Button"
                android:layout_below="@id/etPassword"
                android:id="@+id/btnRegister"/>

        </RelativeLayout>

    </ScrollView>

    </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>